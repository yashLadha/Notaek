extends layout

block content

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1= title

        form(method='POST' action='/addUser')
          div.form-group
            label(for='name') Name 
            input#name.form-control(type='text', placeholder='username', name='username')
          div.form-group
            label(for='password') Password 
            input#password.form-control(type='password', placeholder='password', name='password')
          div.form-group
            label(for='email') Email 
            input#email.form-control(type='text', placeholder='email', name='email')
          button.btn.btn-primary(type='submit') Submit

